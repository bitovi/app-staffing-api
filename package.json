{
  "name": "app-staffing-api",
  "version": "0.1.0",
  "description": "Backend for https://github.com/bitovi/app-staffing/",
  "main": "app.js",
  "scripts": {
    "migrate": "knex migrate:latest --knexfile src/knexfile.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "knex seed:run --knexfile src/knexfile.js",
    "start": "node src/app.js",
    "pretest": "npm run migrate",
    "test": "jest test/",
    "test:watch": "jest --watch test/",
    "build": "tsc -p tsconfig.json"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/app-staffing-api.git"
  },
  "bugs": {
    "url": "https://github.com/bitovi/app-staffing-api/issues"
  },
  "homepage": "https://github.com/bitovi/app-staffing-api#readme",
  "dependencies": {
    "convict": "^6.2.1",
    "faker": "^5.5.3",
    "fastify": "^3.0.0",
    "http-errors": "^1.8.0",
    "json-api-serializer": "^2.6.6",
    "knex": "^0.21.21",
    "objection": "^2.2.17",
    "pg": "^8.7.1",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/knex": "^0.16.1",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "typescript": "^4.4.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  }
}
