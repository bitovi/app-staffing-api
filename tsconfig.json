{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2015", "es2016", "es2017", "dom", "es2018.promise"],
    "paths": {
    }
  },
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
